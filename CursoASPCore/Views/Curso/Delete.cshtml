@model Curso

@{
    ViewData["Title"] = "Eliminación de Curso";
}

<h1>@ViewData["Title"] </h1>

<form method="post">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control-plaintext" />
    </div>

    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección" class="form-control-plaintext" />
    </div>

    <div>
        <label asp-for="Jornada"></label>
        <input asp-for="Jornada" class="form-control-plaintext" />
    </div>

    <input type="submit" />
</form>