@*
    @model ObjetoEscuelaBase

*@

@{
    var controller = ViewBag.Controller;
}
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Nombre</td>
                <td>@obj.Id</td>
                <td>
                    <a asp-controller=@controller
                       asp-action="index"
                       asp-route-id=@obj.Id
                       class="btn btn-secondary btn-sm ml-2">
                        Detalles
                    </a>
                    <a asp-controller=@controller
                       asp-action="edit"
                       asp-route-id=@obj.Id
                       class="btn btn-info btn-sm ml-2">
                        Editar
                    </a>
                    <a asp-controller=@controller
                       asp-action="delete"
                       asp-route-id=@obj.Id
                       class="btn btn-danger btn-sm ml-2">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>